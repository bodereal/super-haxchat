{
  "manifest_version": 3,
  "name": "BODE Super Chat",
  "version": "1.0",
  "description": "Chat on Steroids for HaxBall",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://*.haxball.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.haxball.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}